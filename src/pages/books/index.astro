---
import MainLayout from '../../layouts/MainLayout.astro';
import BookCard from '../../components/BookCard.astro';

const books = [
  {
    title: "The Ways of the World",
    slug: "the-ways-of-the-world",
    ageRange: "14+",
    topic: "Life Philosophy",
    description: "A father's guide to life's essential wisdom — the patterns schools never taught you about power, money, human nature, and how to build a life worth living.",
    coverColor: "#2D4A35",
    coverImage: "/images/the-ways-of-the-world-cover.jpg",
    comingSoon: false,
    amazonUrl: "",
  },
];
---

<MainLayout
  title="All Books — Ironwood Books"
  description="Free children's ebooks on liberty, economics, and character. Download any title free or buy the paperback on Amazon."
>
  <section class="books-hero">
    <div class="container">
      <span class="section-label">The Library</span>
      <h1>Every book, free to read.</h1>
      <p>Download any ebook free. No catch. If you want it on a shelf, the paperback is on Amazon.</p>
    </div>
  </section>

  <section class="books-main">
    <div class="container">
      <div class="books-grid">
        {books.map(book => <BookCard {...book} />)}
      </div>
      <p class="coming-note">More titles in development for younger readers (ages 3–12). <a href="/#signup">Sign up to be notified.</a></p>
    </div>
  </section>
</MainLayout>

<style>
  .books-hero {
    background: var(--green);
    color: var(--white);
    padding: 4rem 1.5rem 3rem;
  }
  .books-hero .section-label { color: rgba(235,241,236,0.7); }
  .books-hero h1 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    color: var(--white);
    margin-bottom: 0.75rem;
  }
  .books-hero p {
    font-size: 1.05rem;
    color: rgba(245,240,232,0.8);
    max-width: 500px;
  }
  .books-main { padding: var(--section-pad); }
  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  .coming-note {
    margin-top: 2rem;
    font-size: 0.875rem;
    color: var(--ink-light);
    text-align: center;
  }
  .coming-note a { color: var(--green); }
</style>
