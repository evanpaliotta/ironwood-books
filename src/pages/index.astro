---
import MainLayout from '../layouts/MainLayout.astro';
import BookCard from '../components/BookCard.astro';
import EmailForm from '../components/EmailForm.astro';

const featuredBooks = [
  {
    title: "The Ways of the World",
    slug: "the-ways-of-the-world",
    ageRange: "14+",
    topic: "Life Philosophy",
    description: "A father's guide to life's essential wisdom â€” the patterns schools never taught you about power, money, human nature, and how to build a life worth living.",
    coverColor: "#2D4A35",
    comingSoon: false,
  },
];
---

<MainLayout
  title="Ironwood Books â€” Built to Last"
  description="Children's books that teach liberty, economics, and character â€” the ideas most schools skip. Free ebooks. Paperbacks on Amazon."
>

  <!-- HERO -->
  <section class="hero">
    <div class="container hero-inner">
      <div class="hero-copy">
        <span class="section-label">Ironwood Books</span>
        <h1>Books built to last.<br/>Ideas worth keeping.</h1>
        <p class="hero-sub">
          Stories for kids about liberty, economics, entrepreneurship, and character.
