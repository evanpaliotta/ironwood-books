---
import MainLayout from '../layouts/MainLayout.astro';
import BookCard from '../components/BookCard.astro';
import EmailForm from '../components/EmailForm.astro';

const featuredBooks = [
  {
    title: "The Ways of the World",
    slug: "the-ways-of-the-world",
    ageRange: "14+",
    topic: "Life Philosophy",
    description: "A father's guide to life's essential wisdom — the patterns schools never taught you about power, money, human nature, and how to build a life worth living.",
    coverColor: "#2D4A35",
    coverImage: "/images/the-ways-of-the-world-cover.jpg",
    comingSoon: false,
  },
];
---

<MainLayout
  title="Ironwood Books — The ideas that don't bend."
  description="Books for children and young adults about how the world actually works — liberty, economics, human nature, and character. Free ebooks, always. Ages 3 to adult."
>

  <!-- HERO -->
  <section class="hero">
    <div class="container hero-inner">
      <div class="hero-copy">
        <span class="section-label">Ironwood Books</span>
        <h1>The ideas<br/>that don't bend.</h1>
        <p class="hero-sub">
          Books for children and young adults about liberty, economics, human nature, and character —
          the ideas that shaped civilization and that most schools have quietly stopped teaching.
          Free ebooks, always.
        </p>
        <div class="hero-actions">
          <a href="/books" class="btn btn-primary">Get the Free Ebook</a>
          <a href="/about" class="btn btn-outline">Our Story</a>
        </div>
      </div>
      <div class="hero-visual">
        <a href="/books/the-ways-of-the-world" class="hero-book-link">
          <img
            src="/images/the-ways-of-the-world-cover.jpg"
            alt="The Ways of the World — book cover"
            class="hero-book-cover"
            width="600"
            height="990"
          />
        </a>
      </div>
    </div>
  </section>

  <!-- TRUST BAR -->
  <div class="trust-bar">
    <div class="container trust-inner">
      <span>Free ebooks, always</span>
      <span class="trust-divider">·</span>
      <span>Paperbacks on Amazon</span>
      <span class="trust-divider">·</span>
      <span>Ages 3 to adult</span>
      <span class="trust-divider">·</span>
      <span>For families who want to go deeper</span>
    </div>
  </div>

  <!-- BOOKS SECTION -->
  <section class="books-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">The Catalog</span>
        <h2>One book. More coming.</h2>
        <p>Right now there's one title — written for teenagers and young adults. More are in development for younger readers. This is the beginning.</p>
      </div>
      <div class="books-grid">
        {featuredBooks.map(book => (
          <BookCard {...book} />
        ))}
      </div>
    </div>
  </section>

  <!-- WHY SECTION -->
  <section class="why-section">
    <div class="container why-inner">
      <div class="why-copy">
        <span class="section-label">Why Ironwood</span>
        <h2>Named for the hardest wood in North America.</h2>
        <p>
          Ironwood is the hardest native hardwood in North America. Craftsmen chose it for
          tool handles and mallets — things that had to hold up under years of hard use.
        </p>
        <p>
          The books in this catalog work the same way. Not lessons disguised as stories.
          The raw material: dense, tested ideas about how the world actually works.
          The child takes that material and builds their own tools.
          Their own frameworks. Their own way of navigating a world that doesn't come with instructions.
        </p>
        <p>
          That's the difference between teaching kids <em>what</em> to think
          and giving them what they need to think for themselves.
        </p>
        <a href="/about" class="btn btn-primary">Read our story</a>
      </div>
      <div class="why-values">
        {[
          { title: "The raw material lasts", text: "Not trends. Not ideology. Principles tested by thousands of years of human civilization." },
          { title: "One big idea, told well", text: "Each book goes deep on one concept. Focused. Memorable. No lectures." },
          { title: "Free, always", text: "Every ebook is free to download. The ideas shouldn't cost anything to reach." },
          { title: "Grows with the reader", text: "A book read at 10 means something different at 16. Built to reward returning." },
        ].map(v => (
          <div class="value-card">
            <h3>{v.title}</h3>
            <p>{v.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- EMAIL CAPTURE -->
  <section class="signup-section" id="signup">
    <div class="container">
      <div class="signup-box">
        <div class="signup-copy">
          <span class="section-label">Stay in the loop</span>
          <h2>New books coming for every age.</h2>
          <p>We're building a catalog from picture books to young adult — all around timeless ideas most schools have stopped teaching. Get the free ebook now and we'll let you know when new titles drop.</p>
        </div>
        <div class="signup-form">
          <EmailForm variant="inline" />
        </div>
      </div>
    </div>
  </section>

</MainLayout>

<style>
  .hero { background: var(--green); color: var(--white); padding: 5rem 1.5rem 4rem; }
  .hero-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .hero-copy .section-label { color: rgba(235,241,236,0.7); }
  .hero-copy h1 { font-size: clamp(2.2rem, 5vw, 3.2rem); color: var(--white); margin-bottom: 1.25rem; line-height: 1.15; }
  .hero-sub { font-size: 1.05rem; color: rgba(245,240,232,0.85); margin-bottom: 2rem; max-width: 500px; line-height: 1.7; }
  .hero-actions { display: flex; gap: 1rem; flex-wrap: wrap; }
  .hero-actions .btn-outline { color: var(--cream); border-color: rgba(245,240,232,0.5); }
  .hero-actions .btn-outline:hover { background: rgba(245,240,232,0.15); border-color: var(--cream); color: var(--cream); }

  .hero-visual { display: flex; justify-content: center; align-items: center; }
  .hero-book-link { display: block; }
  .hero-book-cover { width: 240px; height: auto; border-radius: 4px; box-shadow: 0 24px 64px rgba(0,0,0,0.45); display: block; }

  .trust-bar { background: var(--bronze-light); border-top: 1px solid var(--border); border-bottom: 1px solid var(--border); padding: 0.85rem 1.5rem; }
  .trust-inner { display: flex; flex-wrap: wrap; gap: 0.5rem 1.25rem; justify-content: center; font-size: 0.82rem; font-weight: 600; color: var(--bronze); letter-spacing: 0.02em; }
  .trust-divider { color: var(--border); }

  .books-section { background: var(--cream); }
  .section-header { text-align: center; max-width: 600px; margin: 0 auto 3rem; }
  .section-header h2 { font-size: clamp(1.6rem, 3vw, 2.2rem); margin-bottom: 0.75rem; }
  .section-header p { color: var(--ink-light); }
  .books-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; }
  .books-cta { text-align: center; margin-top: 2.5rem; }

  .why-section { background: var(--white); }
  .why-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: start; }
  .why-copy h2 { font-size: clamp(1.6rem, 3vw, 2.2rem); margin-bottom: 1.25rem; }
  .why-copy p { color: var(--ink-mid); margin-bottom: 1rem; }
  .why-copy p:last-of-type { margin-bottom: 1.75rem; }
  .why-values { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
  .value-card { background: var(--cream); border: 1px solid var(--border); border-radius: 8px; padding: 1.25rem; }
  .value-card h3 { font-size: 0.95rem; margin-bottom: 0.35rem; color: var(--green); }
  .value-card p { font-size: 0.82rem; color: var(--ink-light); line-height: 1.5; }

  .signup-section { background: var(--green-light); }
  .signup-box { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: center; background: var(--white); border: 1px solid var(--border); border-radius: 12px; padding: 3rem; }
  .signup-copy h2 { font-size: 1.75rem; margin-bottom: 0.75rem; }
  .signup-copy p { color: var(--ink-light); font-size: 0.9rem; }

  @media (max-width: 900px) {
    .hero-inner { grid-template-columns: 1fr; }
    .hero-visual { display: none; }
    .why-inner { grid-template-columns: 1fr; }
    .signup-box { grid-template-columns: 1fr; padding: 2rem; gap: 1.5rem; }
  }
  @media (max-width: 600px) {
    .why-values { grid-template-columns: 1fr; }
  }
</style>
