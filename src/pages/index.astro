</MainLayout>

<style>
  .hero { background: var(--green); color: var(--white); padding: 5rem 1.5rem 4rem; }
  .hero-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .hero-copy .section-label { color: rgba(235,241,236,0.7); }
  .hero-copy h1 { font-size: clamp(2.2rem, 5vw, 3.2rem); color: var(--white); margin-bottom: 1.25rem; line-height: 1.15; }
  .hero-sub { font-size: 1.05rem; color: rgba(245,240,232,0.85); margin-bottom: 2rem; max-width: 500px; line-height: 1.7; }
  .hero-actions { display: flex; gap: 1rem; flex-wrap: wrap; }
  .hero-actions .btn-outline { color: var(--cream); border-color: rgba(245,240,232,0.5); }
  .hero-actions .btn-outline:hover { background: rgba(245,240,232,0.15); border-color: var(--cream); color: var(--cream); }

  .hero-visual { display: flex; justify-content: center; align-items: center; }
  .hero-book-single { width: 200px; aspect-ratio: 2/3; border-radius: 6px; background: #3D6347; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 0.75rem; padding: 1.75rem 1.25rem; text-align: center; box-shadow: 0 20px 60px rgba(0,0,0,0.4); }
  .hero-book-title { font-family: var(--font-serif); font-size: 1rem; font-weight: 700; color: var(--white); line-height: 1.25; }
  .hero-book-sub { font-size: 0.65rem; color: rgba(245,240,232,0.65); font-style: italic; line-height: 1.4; }
  .hero-book-brand { font-size: 0.55rem; letter-spacing: 0.12em; text-transform: uppercase; color: rgba(255,255,255,0.35); margin-top: 0.5rem; }

  .trust-bar { background: var(--bronze-light); border-top: 1px solid var(--border); border-bottom: 1px solid var(--border); padding: 0.85rem 1.5rem; }
  .trust-inner { display: flex; flex-wrap: wrap; gap: 0.5rem 1.25rem; justify-content: center; font-size: 0.82rem; font-weight: 600; color: var(--bronze); letter-spacing: 0.02em; }
  .trust-divider { color: var(--border); }

  .books-section { background: var(--cream); }
  .section-header { text-align: center; max-width: 600px; margin: 0 auto 3rem; }
  .section-header h2 { font-size: clamp(1.6rem, 3vw, 2.2rem); margin-bottom: 0.75rem; }
  .section-header p { color: var(--ink-light); }
  .books-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; }
  .books-cta { text-align: center; margin-top: 2.5rem; }

  .why-section { background: var(--white); }
  .why-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: start; }
  .why-copy h2 { font-size: clamp(1.6rem, 3vw, 2.2rem); margin-bottom: 1.25rem; }
  .why-copy p { color: var(--ink-mid); margin-bottom: 1rem; }
  .why-copy p:last-of-type { margin-bottom: 1.75rem; }
  .why-values { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
  .value-card { background: var(--cream); border: 1px solid var(--border); border-radius: 8px; padding: 1.25rem; }
  .value-icon { font-size: 1.5rem; display: block; margin-bottom: 0.5rem; }
  .value-card h3 { font-size: 0.95rem; margin-bottom: 0.35rem; }
  .value-card p { font-size: 0.82rem; color: var(--ink-light); line-height: 1.5; }

  .signup-section { background: var(--green-light); }
  .signup-box { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: center; background: var(--white); border: 1px solid var(--border); border-radius: 12px; padding: 3rem; }
  .signup-copy h2 { font-size: 1.75rem; margin-bottom: 0.75rem; }
  .signup-copy p { color: var(--ink-light); font-size: 0.9rem; }

  @media (max-width: 900px) {
    .hero-inner { grid-template-columns: 1fr; }
    .hero-visual { display: none; }
    .why-inner { grid-template-columns: 1fr; }
    .signup-box { grid-template-columns: 1fr; padding: 2rem; gap: 1.5rem; }
  }
  @media (max-width: 600px) {
    .why-values { grid-template-columns: 1fr; }
  }
</style>
